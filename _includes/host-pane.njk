  <li class="pane">
    <div class="host-name">
       <a href="/hosts/{{ src.name | slug }}">{{ src.name }}</a>
      {%- if src.social -%}
        <br />
        {% for link in src.social %}
          <div class="social-links" target="_blank">
            <a href="{{link.url}}">{{link.name}}</a>
          </div>
        {% endfor  %}
      {%- endif -%}
    </div>
    <dl>
      {% if src.background %}
      <dt>Background</dt>
      <dd>{{ src.background }}</dd>
      {% endif %}
      {%- if src.podcastRecs and src.podcastRecs.length > 0 %}
        <dt>Podcast recommendations</dt>
        <dd>
          {% block podRecs %}
            {% set src = src.podcastRecs %}
            {% include 'recs-pane-podcast.njk' %}
          {% endblock %}
        </dd>
      {% endif %}

      {%- if src.bookRecs and src.bookRecs.length > 0 %}
        <dt>Book recommendations</dt>
        <dd>
          {% block bookRecs %}
            {% set src = src.bookRecs %}
            {% include 'recs-pane-book.njk' %}
          {% endblock %}
        </dd>
      {% endif %}
    </dl>
  </li>

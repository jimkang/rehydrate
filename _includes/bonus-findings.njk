<div>
    <span class="title">{{ extra.title }}</span>
    <br />
    {{ extra.desc|safe }}
    
    {% if extra.topics %}
      <h4>Topics</h4>
      <ul class="finding-links">
      {% for topic in extra.topics %}
        <li>{{ topic|safe }}</li>
      {% endfor %}
      </ul>
    {% endif %}

    {% if extra.links %}
      <h4>References</h4>
      <ul class="finding-links">
      {% for link in extra.links %}
         <li><a href="{{link.url}}">{{ link.name }}</a></li>
      {% endfor %}
      </ul>
    {% endif %}
</div>


